{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "target": "ESNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "shared/*": [
        "shared/*"
      ],
      "@runtime": [
        "runtime/index.ts"
      ]
    }
  },
  "exclude": [
    "tsup.config.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "scripts/**.ts"
  ],
  "include": [
    "src/**/*"
  ]
}